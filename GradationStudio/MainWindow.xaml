<Window x:Class="GradationStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradationStudio"
        mc:Ignorable="d"
        Title="GradationStudio" FontSize="16"
        SizeToContent="WidthAndHeight" MinHeight="0" ResizeMode="CanResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0">
            <StackPanel x:Name="PaletteGrid">
                <Button x:Name="InitButton" Click="InitButton_Click" Height="60" Content="Load Image"/>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Column="1">
            <Image x:Name="RG" DockPanel.Dock="Left" Width="512" Height="512"/>
            <Image x:Name="GB" DockPanel.Dock="Left" Width="512" Height="512"/>
            <Image x:Name="BR" DockPanel.Dock="Bottom" Width="512" Height="512"/>
        </DockPanel>
    </Grid>
</Window>
