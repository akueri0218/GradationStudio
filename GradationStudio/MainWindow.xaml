<Window x:Class="GradationStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradationStudio"
        mc:Ignorable="d"
        Title="GradationDesigner" MinWidth="840" MinHeight="640" Width="840" Height="640">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="520"/>
            <ColumnDefinition Width="310"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition MinHeight="520"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="ImgOpen_Click"/>
                <MenuItem Header="Save" Click="ImgSave_Click"/>
                <MenuItem Header="Close" Click="ImgClose_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <!--image-->
        <Image x:Name="image" Grid.Row="1" Grid.Column="0"/>

        <!--gradation manager-->
        <DockPanel Grid.Row="1" Grid.Column="1">
            <Rectangle x:Name="grdBar" HorizontalAlignment="Left" Fill="DarkGray" Width="50" Grid.Row="1" Grid.Column="1"/>

            <!--gradation label-->
            <DockPanel DockPanel.Dock="Top" Height="30" Background="LightGray">
                <Border Width="30" Background="Transparent" BorderBrush="Black" BorderThickness="2"/>
                <Label Width="120" Content="Color" VerticalContentAlignment="Center"/>
                <Label Content="Offset" Width="110" VerticalContentAlignment="Center"/>
                <Border Width="30" Height="30"/>
            </DockPanel>

            <!--color manager-->
            <DockPanel DockPanel.Dock="Bottom" Height="130" Width="260" Background="LightGray">
                <!--slider-->
                <DockPanel DockPanel.Dock="Top">
                    <Slider x:Name="SliderR" ValueChanged="SliderR_Changed" Height="30" Width="210" Foreground="#FF0000" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0"
                            TickPlacement="BottomRight" Minimum="0" Maximum="255" TickFrequency="1" SmallChange="1" LargeChange="1" Value="255"/>
                    <Label x:Name="LabelR" Height="30" Width="30" Content="255" VerticalContentAlignment="Center"/>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Slider x:Name="SliderG" ValueChanged="SliderG_Changed" Height="30" Width="210" Foreground="#00FF00" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0"
                            TickPlacement="BottomRight" Minimum="0" Maximum="255" TickFrequency="1" SmallChange="1" LargeChange="1" Value="255"/>
                    <Label x:Name="LabelG" Height="30" Width="30" Content="255" VerticalContentAlignment="Center"/>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                    <Slider x:Name="SliderB"  ValueChanged="SliderB_Changed" Height="30" Width="210" Foreground="#0000FF" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0"
                            TickPlacement="BottomRight" Minimum="0" Maximum="255" TickFrequency="1" SmallChange="1" LargeChange="1" Value="255"/>
                    <Label x:Name="LabelB" Height="30" Width="30" Content="255" VerticalContentAlignment="Center"/>
                </DockPanel>

                <DockPanel x:Name="Preview" DockPanel.Dock="Left" Background="White" VerticalAlignment="Bottom"  Height="40">
                    <Button Click="AddColor_Click" DockPanel.Dock="Left" Width="30" Height="30" Background="Transparent" Padding="0" Margin="5 0 0 0" BorderThickness="0">
                        <Border Background="DarkGray" BorderBrush="Gray" Padding="2">
                            <Path Stroke="White" StrokeThickness="5">
                                <Path.Data>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="13 0" EndPoint="13 28"/>
                                        <LineGeometry StartPoint="0 13" EndPoint="28 13"/>
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                        </Border>
                    </Button>
                    <TextBox x:Name="offsetText" DockPanel.Dock="Right" TextChanged="offsetChanged" Margin="0 0 10 0" Text="0" Width="60" Height="30" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
                    <Label Content="Offset:" Margin="0" Width="60" Height="30" Background="LightGray" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Right"/>
                </DockPanel>
            </DockPanel>

            <StackPanel x:Name="colorIndex" Grid.Row="1" Grid.Column="1">

            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="2" Grid.Column="1" Background="LightGray">
            <Button Click="GRDLoad_Click" Content="Load" Width="64" Height="24" HorizontalAlignment="Left" Margin="32 0 0 0"/>
            <Button Click="GRDSave_Click" Content="Save" Width="64" Height="24" HorizontalAlignment="Center"/>
            <Button Click="GRDApply_Click" Content="Apply" Width="64" Height="24" HorizontalAlignment="Right" Margin="0 0 32 0"/>
        </Grid>
    </Grid>
</Window>
